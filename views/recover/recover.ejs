<script>
function login() {
	///validation...
	var myform = document.myform;

	if (myform.newPwd.value.length < 6)
	{
		myform.newPwd.className = "passwordfield_mismatch";
		document.getElementById("errView1").style.display = "inline-block";
		return;
	} else if (myform.newPwd.value != myform.confirmPwd.value) {
		myform.newPwd.className = "passwordfield";
		document.getElementById("errView1").style.display = "none";
		myform.confirmPwd.className = "passwordfield_mismatch";
		document.getElementById("errView2").style.display = "inline-block";
		return;
	} else {
		myform.newPwd.className = "passwordfield";
		myform.confirmPwd.className = "passwordfield";
		document.getElementById("errView1").style.display = "none";
		document.getElementById("errView2").style.display = "none";
	}
	
	myform.submit();
}
</script>
                            
                            